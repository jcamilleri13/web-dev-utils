{
  "exclude": ["dist"],
  "compilerOptions": {
    "module": "es2022",
    "target": "es2020",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "svelte"],
    "verbatimModuleSyntax": true
  }
}
